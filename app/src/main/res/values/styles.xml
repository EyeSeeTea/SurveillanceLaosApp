<resources>

    <!-- Base application theme. -->
    <!--<style name="EyeSeeTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="background">@color/mainColor</item>-->
    <!-- specify shared element transitions -->
    <!--<item name="android:windowSharedElementEnterTransition">
        @transition/fadein</item>-->
    <!--<item name="android:windowSharedElementExitTransition">
        @transition/fadeout</item>-->
    <!--</style>-->
    <style name="Widget.AppCompat.Spinner.EyeSeeSpinner">
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Base application theme. -->
    <style name="EyeSeeTheme" parent="Theme.AppCompat.Light">
        <!--<item name="windowActionBar">false</item>-->
        <!-- its the default theme. Look in the styles.xml in the variant if you should change some theme default value-->
        <item name="colorPrimary">@color/actionbar_background</item>
        <item name="colorPrimaryDark">@color/dark_navy_blue</item>
        <item name="android:windowBackground">@color/main_window_background</item>
        <item name="logo">@drawable/pictureapp_logo</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LoginScreenTheme" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/navy_blue</item>
        <item name="colorPrimaryDark">@color/dark_navy_blue</item>
        <item name="android:windowBackground">@color/dark_navy_blue</item>
    </style>

    <style name="Widget.MyApp.HeaderBar.Spinner" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:dropDownSelector">?android:selectableItemBackground</item>
        <item name="android:divider">@null</item>
    </style>

    <style name="EyeSeeTextSmall">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <style name="EyeSeeTextMedium">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="EyeSeeTextLarge">
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
    </style>

    <style name="EyeSeeTextExtra">
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
    </style>

    <style name="FloatingButton">
        <item name="android:drawable">@drawable/button_borders</item>
    </style>


</resources>
