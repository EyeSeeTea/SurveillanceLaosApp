<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_question_header"
    android:orientation="vertical">

    <include layout="@layout/top_view"></include>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <org.eyeseetea.malariacare.views.TextCard
            android:id="@+id/question_title"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:gravity="left"
            android:lineSpacingMultiplier="1.5"
            android:padding="5dip"
            android:paddingBottom="2dip"
            android:paddingLeft="10dip"
            android:paddingTop="2dip"
            android:text="@string/assessment_new_cases"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/question_header_title"
            app:tDimension="@string/font_size_level1"
            app:tFontName="@string/condensed_font_name" />
        <!--android:textSize="@dimen/dashboard_text_size"-->
        <View
            android:layout_width="3dip"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:background="@color/dark_violet" />

        <org.eyeseetea.malariacare.views.TextCard
            android:id="@+id/question"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:autoText="false"
            android:gravity="center"
            android:padding="5dip"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/question_header_subtitle"
            app:tDimension="@string/font_size_level1"
            app:tFontName="@string/condensed_font_name" />
        <!--android:textSize="@dimen/dashboard_text_size"-->
    </LinearLayout>
</LinearLayout>